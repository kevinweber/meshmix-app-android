<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button android:id="@+id/handle_speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speech_button_default"
            android:layout_gravity="center_horizontal"/>

        <Button android:id="@+id/handle_speech_circle"
            android:text="@string/speech_button_default"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:scaleType="center"
            android:adjustViewBounds="true"

            android:layout_width="200dp"
            android:layout_height="200dp"

            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_button_primary"
            />

        <!--android:contentDescription="@string/play_button"-->
        <!--android:adjustViewBounds="false"-->
        <!--android:foregroundGravity="center_horizontal"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:textAlignment="center"-->

        <Button
            android:id="@+id/handle_autoplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autoplaystatus_button_default"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/stop_background_autoplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop running TTS that has been started automatically"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
